ICON_NAMES = ('sunny' 'night' 'windy' 'shower' 'downpour' 'stormy' 'partly-sunny' 'partly-night' 'windy-cloudy')

.section > div
  display: flex;
  justify-content: center;
  align-items: center;

.logo
  size: 256px

.icons
  display: flex
  flex-wrap: wrap
  width: calc((48px + 2rem) * 3)

.icon
  display: inline-block
  width: 48px
  margin: 1rem
  border-radius: 100%
  background-color: #648271
  background-repeat: no-repeat

  for i in (0..8)
    &:nth-child({i+1})
      $url = '../images/weather-' + ICON_NAMES[i] + '.svg'
      background-image: url($url)

  &:before
    content: ''
    display: block
    padding-top: 100%
